<h3>Comments</h3>

<% @post.comments.each do |comment| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= comment.user.email %></h5>
      <p class="card-text"><%= comment.content %></p>
    </div>
  </div>
<% end %>

<h4>Leave a comment:</h4>
<%= form_with(model: [ @post, @post.comments.build ], class: 'mt-4') do |form| %>
  <div class="form-group">
    <%= form.label :content, class: 'form-label' %>
    <%= form.text_area :content, class: 'form-control', rows: 3, placeholder: 'Write your comment here' %>
  </div>
  <%= form.submit "Post Comment", class: 'btn btn-primary mt-2' %>
<% end %>
